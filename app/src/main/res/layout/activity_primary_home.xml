<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PrimaryHome">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:orientation="vertical">

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:id="@+id/syn_card"
           app:cardElevation="10dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:id="@+id/syn_img"
                   android:layout_centerVertical="true"
                   android:contentDescription="@string/english"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:text="Synonyms"
                   android:layout_centerVertical="true"
                   android:textColor="@color/black"/>


           </RelativeLayout>

       </com.google.android.material.card.MaterialCardView>

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:layout_marginTop="10dp"
           android:id="@+id/antonyms_card"
           app:cardElevation="10dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:id="@+id/antonyms_img"
                   android:layout_centerVertical="true"
                   android:contentDescription="@string/english"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:text="Antonyms"
                   android:layout_centerVertical="true"
                   android:textColor="@color/black"/>


           </RelativeLayout>

       </com.google.android.material.card.MaterialCardView>

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:layout_marginTop="10dp"
           android:id="@+id/teaser_card"
           app:cardElevation="10dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:id="@+id/teaser_img"
                   android:layout_centerVertical="true"
                   android:contentDescription="@string/english"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:text="Brain Teaser"
                   android:layout_centerVertical="true"
                   android:textColor="@color/black"/>


           </RelativeLayout>

       </com.google.android.material.card.MaterialCardView>

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:layout_marginTop="10dp"
           android:id="@+id/wai_card"
           app:cardElevation="10dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:id="@+id/wai_img"
                   android:layout_centerVertical="true"
                   android:contentDescription="@string/english"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:text="What Am I?"
                   android:layout_centerVertical="true"
                   android:textColor="@color/black"/>


           </RelativeLayout>

       </com.google.android.material.card.MaterialCardView>

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:cardCornerRadius="10dp"
           android:layout_marginTop="10dp"
           android:id="@+id/eng_card"
           app:cardElevation="10dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:id="@+id/flags_img"
                   android:layout_centerVertical="true"
                   android:contentDescription="@string/english"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:text="Guess the Country"
                   android:layout_centerVertical="true"
                   android:textColor="@color/black"/>


           </RelativeLayout>

       </com.google.android.material.card.MaterialCardView>

   </LinearLayout>

</RelativeLayout>